   success: function(response) {\n                if (response.success) {\n                    $('#form-message').html('<span style=\"color: green;\">' + response.data.message + '<\/span>');\n                    $('#custom-ask-form')[0].reset();\n                    setTimeout(function() {\n                        window.location.href = 'https:\/\/mountainise.com\/questions\/';\n                    }, 1000);\n                } else {\n                    $('#form-message').html('<span style=\"color: red;\">' + response.data.message + '<\/span>');\n                }\n            },\n            error: function() {\n                $('#form-message').html('<span style=\"color: red;\">Error submitting question.<\/span>');\n            },\n            complete: function() {\n                $('#loading-spinner').hide();\n                $('#submit-btn').prop('disabled', false);\n            }\n        });\n    });\n\n    \/\/ Step logic with fade effect\n    function showStep(showEl, hideEl) {\n        hideEl.classList.remove('show');\n        setTimeout(() => {\n            hideEl.style.display = 'none';\n            showEl.style.display = 'block';\n            setTimeout(() => showEl.classList.add('show'), 10);\n        }, 400);\n    }\n\n    document.getElementById('to-step-2').addEventListener('click', function () {\n        const title = document.getElementById('question_title').value.trim();\n        const errorMsg = document.getElementById('step1-error');\n\n        if (title === '') {\n            errorMsg.textContent = 'Please enter a Question Title before proceeding.';\n            errorMsg.style.display = 'block';\n            return;\n        }\n\n        errorMsg.style.display = 'none';\n        showStep(\n            document.getElementById('ap-form-step-2'),\n            document.getElementById('ap-form-step-1')\n        );\n    });\n\n    document.getElementById('to-step-1').addEventListener('click', function () {\n        showStep(\n            document.getElementById('ap-form-step-1'),\n            document.getElementById('ap-form-step-2')\n        );\n    });\n});\n<\/script>\n\n\n<style>\n\n#to-step-2 {     background-color: #44AB64;\n    border: none;\n    color: #fff;\n    cursor: pointer;\n    transition: all .45s cubic-bezier(.25,1,.33,1);\n    width: auto;\n    font-family: 'Open Sans';\n    font-weight: 600;\n    font-size: 14px; padding: 16px; }\n    \n    #to-step-1 {     background-color: #44AB64;\n    border: none;\n    color: #fff;\n    cursor: pointer;\n    transition: all .45s cubic-bezier(.25,1,.33,1);\n    width: auto;\n    font-family: 'Open Sans';\n    font-weight: 600;\n    font-size: 14px; padding: 16px; margin-right: 10px; }\n    \n#step1-error {\n  color: #d8000c;\n  background: #ffd2d2;\n  padding: 8px 12px;\n  border-radius: 4px;\n}\n\n\n<\/style>\n<\/div><div class=\"ap-cradit\">Question and answer is powered by <a href=\"https:\/\/anspress.net\" target=\"_blank\">anspress.net<\/a><\/div><\/div>\n\t\t\t\t\t\t<\/div>\n\t\t\t\t<\/div>\n\t\t\t\t\t<\/div>\n\t\t<\/div>\n\t\t\t\t\t<\/div>\n\t\t<\/section>\n\t\t\t\t<\/div>\n\t\t","protected":false},"excerpt":{"rendered":"<p>ASK A QUESTION&#8217;s Unlocking the Future of Business: Insights and Innovations from Mountainise. Back to questions<\/p>\n","protected":false},"author":8,"featured_media":0,"parent":0,"menu_order":0,"comment_status":"closed","ping_status":"closed","template":"","meta":{"_acf_changed":false,"_seopress_robots_primary_cat":"","_seopress_titles_title":"","_seopress_titles_desc":"","_seopress_robots_index":"","_angie_page":false,"content-type":"","inline_featured_image":false,"footnotes":""},"class_list":["post-21419","page","type-page","status-publish"],"acf":[],"yoast_head":"<!-- This site is optimized with the Yoast SEO plugin v26.8 - https:\/\/yoast.com\/product\/yoast-seo-wordpress\/ -->\n<title>Ask a question - Mountainise<\/title>\n<meta name=\"robots\" content=\"index, follow, max-snippet:-1, max-image-preview:large, ma