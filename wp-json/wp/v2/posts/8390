=\"html.default\">\n\t\t\t\t<div class=\"elementor-widget-container\">\n\t\t\t\t\t<script>\n  jQuery(document).ready(function($) {\n    const sections = $('.all-sections-heading');\n    const navLinks = $('.custom-sidebar a');\n\n    function activateLink(link) {\n      navLinks.removeClass('active-item');\n      link.addClass('active-item');\n    }\n\n    \/\/ On click, change the active class and scroll to section with offset\n    navLinks.on('click', function(e) {\n      e.preventDefault();\n      const targetId = $(this).attr('href');\n      activateLink($(this));\n      $('html, body').animate({\n        scrollTop: $(targetId).offset().top - 80\n      }, 300);\n    });\n\n    \/\/ On scroll, change the active class dynamically\n    $(window).on('scroll', function() {\n      let currentSection = '';\n\n      sections.each(function() {\n        const sectionTop = $(this).offset().top;\n        const sectionHeight = $(this).outerHeight();\n        if ($(window).scrollTop() >= sectionTop - sectionHeight \/ 3 - 80) {\n          currentSection = $(this).attr('id');\n        }\n      });\n\n      navLinks.each(function() {\n        if ($(this).attr('href') === '#' + currentSection) {\n          activateLink($(this));\n        }\n      });\n    });\n  });\n<\/script>\n\t\t\t\t<\/div>\n\t\t\t\t<\/div>\n\t\t\t\t\t<\/div>\n\t\t<\/div>\n\t\t\t\t\t<\/div>\n\t\t<\/section>\n\t\t\t\t\t<\/div>\n\t\t<\/div>\n\t\t\t\t<div class=\"elementor-column elementor-col-33 elementor-top-column elementor-element elementor-element-9c32893\" data-id=\"9c32893\" data-element_type=\"column\">\n\t\t\t<div class=\"elementor-widget-wrap elementor-element-populated\">\n\t\t\t\t\t\t<div class=\"elementor-element elementor-element-c449fbb elementor-widget elementor-widget-slide-compact-player\" data-id=\"c449fbb\" data-element_type=\"widget\" data-settings=\"{&quot;ekit_we_effect_on&quot;:&quot;none&quot;}\" data-widget_type=\"slide-compact-player.default\">\n\t\t\t\t<div class=\"elementor-widget-container\">\n\t\t\t\t\t\r\n\t\t<div class=\"swp_music_player compact-player\" id=\"mpfe_697113edd0138\" data-autoplay=\"no\" data-playmode=\"repeat\" data-stopplaylistend=\"no\" data-stopsongend=\"no\" data-repeatmode=\"unset\">\r\n\t\t\t<div class=\"swp-compact-player\">\r\n\t\t\t\t<div class=\"swp-compact-cover\">\r\n\t\t\t\t\t<div class=\"swp-compact-cover-container\"><\/div>\r\n\t\t\t\t\t<div class=\"compact-cover-overlay album_left_overlay lc_swp_overlay\"><\/div>\r\n\t\t\t\t<\/div>\r\n\r\n\t\t\t\t<div class=\"swp-compact-player-info\">\r\n\t\t\t\t\t<div class=\"compact-info-overlay album_right_overlay lc_swp_overlay\"><\/div>\r\n\t\t\t\t\t<div class=\"compact-info-content\">\r\n\t\t\t\t\t\t<div class=\"compact-info-top clearfix\">\r\n\t\t\t\t\t\t\t<div class=\"compact-song-details\">\r\n\t\t\t\t\t\t\t\t<div class=\"current_song_name compact-song-name\"><\/div>\r\n\t\t\t\t\t\t\t\t<div class=\"current_album_name compact-album-name\"><\/div>\r\n\t\t\t\t\t\t\t<\/div>\r\n\t\t\t\t\t\t\t<div class=\"compact-play-pause\">\r\n\t\t\t\t\t\t\t\t<span class=\"compact-play-container \">\r\n\t\t\t\t\t\t\t\t\t<i class=\"fas fa-play player_play compact_play compact-playpause\"><\/i>\r\n\t\t\t\t\t\t\t\t<\/span>\r\n\t\t\t\t\t\t\t\t<span class=\"compact-pause-container\">\r\n\t\t\t\t\t\t\t\t\t<i class=\"fas fa-pause compact_pause compact-playpause display_none\"><\/i>\r\n\t\t\t\t\t\t\t\t<\/span>\r\n\t\t\t\t\t\t\t<\/div>\r\n\t\t\t\t\t\t<\/div>\r\n\r\n\t\t\t\t\t\t<div class=\"smc_player_progress_bar compact-progress-bar\">\r\n\t\t\t\t\t\t\t<div class=\"player_time_slider_base compact-player-slider-base ltr_direction\"><\/div>\r\n\t\t\t\t\t\t\t<div class=\"player_time_slider compact-player-slider\"><\/div>\r\n\t\t\t\t\t\t<\/div>\r\n\r\n\t\t\t\t\t\t<div class=\"compact-info-bottom clearfix\">\r\n\t\t\t\t\t\t\t<div class=\"compact-timeline\">\r\n\t\t\t\t\t\t\t\t<span class=\"song_current_progress compact_current_progress\">0:00<\/span>\r\n\t\t\t\t\t\t\t\t<span class=\"player_duration_s