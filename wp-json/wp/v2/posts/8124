 const targetId = $(this).attr('href');\n      activateLink($(this));\n      $('html, body').animate({\n        scrollTop: $(targetId).offset().top - 80\n      }, 300);\n    });\n\n    \/\/ On scroll, change the active class dynamically\n    $(window).on('scroll', function() {\n      let currentSection = '';\n\n      sections.each(function() {\n        const sectionTop = $(this).offset().top;\n        const sectionHeight = $(this).outerHeight();\n        if ($(window).scrollTop() >= sectionTop - sectionHeight \/ 3 - 80) {\n          currentSection = $(this).attr('id');\n        }\n      });\n\n      navLinks.each(function() {\n        if ($(this).attr('href') === '#' + currentSection) {\n          activateLink($(this));\n        }\n      });\n    });\n  });\n<\/script>\n\t\t\t\t<\/div>\n\t\t\t\t<\/div>\n\t\t\t\t\t<\/div>\n\t\t<\/div>\n\t\t\t\t\t<\/div>\n\t\t<\/section>\n\t\t\t\t\t<\/div>\n\t\t<\/div>\n\t\t\t\t<div class=\"elementor-column elementor-col-33 elementor-top-column elementor-element elementor-element-fe2ffa8\" data-id=\"fe2ffa8\" data-element_type=\"column\">\n\t\t\t<div class=\"elementor-widget-wrap elementor-element-populated\">\n\t\t\t\t\t\t<div class=\"elementor-element elementor-element-00c007c elementor-widget elementor-widget-slide-compact-player\" data-id=\"00c007c\" data-element_type=\"widget\" data-settings=\"{&quot;ekit_we_effect_on&quot;:&quot;none&quot;}\" data-widget_type=\"slide-compact-player.default\">\n\t\t\t\t<div class=\"elementor-widget-container\">\n\t\t\t\t\t\r\n\t\t<div class=\"swp_music_player compact-player\" id=\"mpfe_697112f949e17\" data-autoplay=\"no\" data-playmode=\"repeat\" data-stopplaylistend=\"no\" data-stopsongend=\"no\" data-repeatmode=\"unset\">\r\n\t\t\t<div class=\"swp-compact-player\">\r\n\t\t\t\t<div class=\"swp-compact-cover\">\r\n\t\t\t\t\t<div class=\"swp-compact-cover-container\"><\/div>\r\n\t\t\t\t\t<div class=\"compact-cover-overlay album_left_overlay lc_swp_overlay\"><\/div>\r\n\t\t\t\t<\/div>\r\n\r\n\t\t\t